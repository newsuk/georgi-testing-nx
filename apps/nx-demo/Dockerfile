# Build the docker image with `npx nx docker-build nx-demo`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nx-demo`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nx-demo && \
          adduser --system -G nx-demo nx-demo

COPY dist/apps/nx-demo nx-demo/
RUN chown -R nx-demo:nx-demo .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nx-demo --omit=dev -f install

CMD [ "node", "nx-demo" ]
